<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.ramonguimaraes.horacerta.ui.authentication.CreateAccountFragment"
        android:label="CreateAccountFragment"
        tools:layout="@layout/fragment_create_account">
        <argument
            android:name="accountType"
            app:argType="com.ramonguimaraes.horacerta.utils.AccountType" />
        <action
            android:id="@+id/action_createAccountFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ramonguimaraes.horacerta.ui.authentication.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_companyProfileFragment"
            app:destination="@id/companyProfileFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ramonguimaraes.horacerta.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/companyProfileFragment"
        tools:layout="@layout/fragment_company_profile"
        android:name="com.ramonguimaraes.horacerta.ui.companyProfile.CompanyProfileFragment"
        android:label="CompanyProfileFragment" >
        <argument
            android:name="callFromLogin"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_companyProfileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/companyProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>